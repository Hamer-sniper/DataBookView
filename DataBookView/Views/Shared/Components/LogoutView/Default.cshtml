@model ChangeRole
@if (Model != null)
{
    <div class="btn-group pull-right">
        <form method="post" asp-controller="Account" asp-action="Logout" id="logoutform" asp-antiforgery="true">

            @if (Model.UserRoles.Contains("Admin"))
            {
                <a class="navbar-brand" href="/Roles">Управление ролями</a>
                <a>&nbsp;&nbsp;&nbsp;</a>
                <a class="navbar-brand" href="/Account/Register">Регистрация</a>
            }

            <a>&nbsp;&nbsp;&nbsp;</a>
            <a class="navbar-brand" href="#">@Model.UserName</a>
            <a>&nbsp;&nbsp;&nbsp;</a>
            <a class="navbar-brand" href="#" onclick="document.getElementById('logoutform').submit()">Выход</a>
        </form>
    </div>
}
else
{
    <div class="btn-group pull-right">
        <a class="navbar-brand" href="/Account/Login">Вход</a>        
    </div>
}